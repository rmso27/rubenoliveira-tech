{
  "name": "@sanity/cli-test",
  "version": "0.0.2-alpha.7",
  "description": "Sanity CLI test helpers and utilities",
  "keywords": [
    "sanity",
    "cms",
    "headless",
    "realtime",
    "content",
    "cli",
    "tool"
  ],
  "homepage": "https://github.com/sanity-io/cli",
  "bugs": "https://github.com/sanity-io/cli/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/cli.git",
    "directory": "packages/@sanity/cli-test"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./vitest": {
      "source": "./src/vitest.ts",
      "require": "./dist/vitest.js",
      "import": "./dist/vitest.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist",
    "./examples"
  ],
  "dependencies": {
    "@swc/core": "^1.15.10",
    "ansis": "^4.2.0",
    "esbuild": "^0.27.2",
    "nock": "^14.0.10",
    "ora": "^9.0.0",
    "tinyglobby": "^0.2.15"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@oclif/core": "^4.8.0",
    "@sanity/client": "^7.14.0",
    "@swc/cli": "^0.7.10",
    "@types/node": "^20.19.30",
    "eslint": "^9.39.2",
    "publint": "^0.3.16",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "yaml": "^2.8.2",
    "@repo/tsconfig": "3.70.0",
    "@sanity/cli-core": "0.1.0-alpha.8",
    "@sanity/eslint-config-cli": "0.0.0-alpha.1"
  },
  "peerDependencies": {
    "@oclif/core": "^4.0.0",
    "@sanity/client": "^7.0.0",
    "vitest": ">=3.0.0 <4.0.0",
    "@sanity/cli-core": "0.1.0-alpha.8"
  },
  "engines": {
    "node": ">=20.19.1 <22 || >=22.12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "pnpm run clean",
    "build": "pnpm run build:js && pnpm run copy:examples",
    "build:js": "swc --delete-dir-on-start --strip-leading-paths --out-dir dist/ src",
    "build:types": "tsc --project tsconfig.lib.json",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf dist examples",
    "copy:examples": "node scripts/copy-examples.js",
    "lint": "eslint .",
    "publint": "publint",
    "test": "vitest run",
    "posttest": "pnpm run lint",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "watch": "swc --delete-dir-on-start --strip-leading-paths --out-dir dist/ --watch src"
  }
}